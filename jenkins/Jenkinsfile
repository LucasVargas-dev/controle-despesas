#!/usr/bin/env groovy
pipeline {
    agent any
    withEnv(['C:/Program Files/nodejs/']) {
        stage('Prepare') {
        sh "npm install -g yarn"
        sh "yarn install"
        }
    }
    stages {
        stage('Build-back') {
            steps {
                sh '''cd back
                npm install -g yarn
                yarn dev'''
            }
        }
        stage('Build-front') {
            steps {
                sh '''cd frontend
                npm install -g yarn
                yarn dev'''
            }
        }
    }
}