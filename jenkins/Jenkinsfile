#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('Build-back') {
            // agent {
            //     docker { image 'nodejs' }
            // }
            steps {
                sh '''cd back
                npm install -g yarn
                yarn dev'''
            }
        }
        stage('Build-front') {
            // agent {
            //     docker { image 'nodejs' }
            // }
            steps {
                sh '''cd frontend
                npm install -g yarn
                yarn dev'''
            }
        }
    }
}